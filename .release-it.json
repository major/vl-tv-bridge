{
  "git": {
    "commitMessage": "Release v${version}",
    "tagName": "v${version}",
    "push": true,
    "requireBranch": "main",
    "requireCleanWorkingDir": true
  },
  "github": {
    "release": true,
    "releaseName": "v${version}",
    "autoGenerate": true,
    "assets": [
      "build/vl-tv-bridge-*.zip",
      "build/vl-tv-bridge-*-signed.xpi"
    ]
  },
  "hooks": {
    "before:init": ["npm run lint"],
    "after:bump": [
      "node -e \"const fs=require('fs');const pkg=require('./package.json');const manifest=require('./firefox/manifest.json');manifest.version=pkg.version;fs.writeFileSync('./firefox/manifest.json',JSON.stringify(manifest,null,2)+'\\n')\"",
      "git add firefox/manifest.json"
    ],
    "before:github:release": ["npm run build"],
    "after:release": "echo ğŸ‰ Release ${version} published to GitHub!"
  },
  "npm": {
    "publish": false
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": {
        "name": "conventionalcommits",
        "types": [
          { "type": "feat", "section": "âœ¨ Features" },
          { "type": "fix", "section": "ğŸ› Bug Fixes" },
          { "type": "perf", "section": "âš¡ Performance" },
          { "type": "refactor", "section": "â™»ï¸ Refactoring" },
          { "type": "docs", "section": "ğŸ“š Documentation" },
          { "type": "chore", "hidden": true }
        ]
      },
      "infile": "CHANGELOG.md",
      "header": "# Changelog\n\nAll notable changes to VL-TV Bridge.\n"
    }
  }
}
